
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listSearch = (List<Model.EF.Product>)ViewBag.Search;

}

<hr style="font-weight:100" />
<div class="main">
    <div class="content">
        <div class="section group">
            @foreach (var item in listSearch)
            {
                var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
                    <h2>@item.Name </h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ") VND</span></p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="/them-gio-hang?productId= @item.ID&quantity=1">Add to Cart</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


 
<!DOCTYPE HTML>
<head>
    <title>Kristinie - Flower Shop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/Assets/client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Assets/client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="/Assets/client/js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/Assets/client/js/move-top.js"></script>
    <script type="text/javascript" src="/Assets/client/js/easing.js"></script>
    <script type="text/javascript" src="/Assets/client/js/startstop-slider.js"></script>
    <link rel="shortcut icon" href="~/Assets/client/images/icon.jpg">
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @{ Html.RenderAction("TopMenu", "Home");}
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/Home/Index" ref="nofollow"><img src="/Assets/client/images/Logo.png" alt="" /></a>
                </div>
               @{ Html.RenderAction("HeaderCart", "Home");}
                <script type="text/javascript">
			function DropDown(el) {
				this.dd = el;
				this.initEvents();
			}
			DropDown.prototype = {
				initEvents : function() {
					var obj = this;

					obj.dd.on('click', function(event){
						$(this).toggleClass('active');
						event.stopPropagation();
					});
				}
			}

			$(function() {

				var dd = new DropDown( $('#dd') );

				$(document).click(function() {
					// all dropdowns
					$('.wrapper-dropdown-2').removeClass('active');
				});

			});

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{ Html.RenderAction("MainMenu", "Home");}
                <div class="search_box">

                    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
                    {
                        <input type="text" value="@ViewBag.Search" name="search" onfocus="this.value = '';" onblur="if (this.value == '@ViewBag.Search') {this.value = '@ViewBag.Search';}"><input type="submit" value="">
                    }
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", required: false)
          
        </div>
        <div class="main">
            @RenderBody()
           
        </div>
    </div>
    <div class="footer">
        @{ Html.RenderAction("Footer", "Home");}
        <div class="copy_right">
            <p>&copy; 2019 Kristinie_FlowerShop. All rights reserved | Thanks you ! </a></p>
        </div>
    </div>
    <script type="text/javascript">
		$(document).ready(function() {
			$().UItoTop({ easingType: 'easeOutQuart' });

		});
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    @RenderSection("jsFooter", required:false)
</body>


